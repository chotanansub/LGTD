{
  "dataset": {
    "name": "Sunspot",
    "type": "real_world",
    "loader": "load_sunspot_dataset",
    "loader_params": {
      "subset": "all"
    }
  },
  "models": {
    "LGTD": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "window_size": 3,
        "error_percentile": 50,
        "trend_selection": "auto",
        "lowess_frac": 0.1,
        "threshold_r2": 0.92,
        "verbose": false
      }
    },
    "LGTD_Linear": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "window_size": 3,
        "error_percentile": 50,
        "trend_selection": "linear",
        "verbose": false
      }
    },
    "LGTD_LOWESS": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "window_size": 3,
        "error_percentile": 50,
        "trend_selection": "lowess",
        "lowess_frac": 0.1,
        "verbose": false
      }
    },
    "STL": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "period": 12,
        "seasonal": 13,
        "trend": null,
        "robust": false
      }
    },
    "RobustSTL": {
      "enabled": false,
      "model_type": "batch",
      "params": {
        "period": 12,
        "reg1": 10.0,
        "reg2": 0.5,
        "K": 2,
        "H": 5,
        "dn1": 1.0,
        "dn2": 1.0,
        "ds1": 50.0,
        "ds2": 1.0
      }
    },
    "FastRobustSTL": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "period": 12,
        "reg1": 1.0,
        "reg2": 10.0,
        "K": 2,
        "H": 5,
        "dn1": 1.0,
        "dn2": 1.0,
        "ds1": 50.0,
        "ds2": 1.0,
        "max_iter": 1000
      }
    },
    "STR": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "seasonal_periods": [
          12
        ],
        "trend_lambda": 100.0,
        "seasonal_lambda": 1.0,
        "robust": false,
        "auto_params": false,
        "n_trials": 20
      }
    },
    "OnlineSTL": {
      "enabled": true,
      "model_type": "online",
      "params": {
        "periods": [
          12
        ],
        "lam": 0.3,
        "init_window_ratio": 0.3
      }
    },
    "OneShotSTL": {
      "enabled": true,
      "model_type": "online",
      "params": {
        "period": 12,
        "shift_window": 0,
        "init_ratio": 0.3
      }
    },
    "ASTD": {
      "enabled": true,
      "model_type": "batch",
      "params": {
        "seasonality_smoothing": 0.7,
        "mode": "batch"
      }
    },
    "ASTD_Online": {
      "enabled": true,
      "model_type": "online",
      "params": {
        "seasonality_smoothing": 0.7,
        "mode": "online",
        "init_window_size": 300
      }
    }
  },
  "evaluation": {
    "metrics": [
      "mse",
      "mae"
    ],
    "save_plots": false,
    "plot_dir": "experiments/results/real_world/figures/Sunspot"
  }
}